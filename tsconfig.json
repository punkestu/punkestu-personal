{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution":"node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["src/views"]
}